
#include <iostream>
using namespace std;

int main()
{
	int opcion, a, b;
	do {
		cout << "---MENU---"<< endl;
		cout << "1.suma" << endl;
		cout << "2.par e impar" << endl;
		cout << "3. Mostrar los numeros desde el 1 hasta el n" << endl;
		cout << "0. salir" << endl;
		cout << "elige tu opcion" << endl;
		cin >> opcion;
		switch (opcion) {
		case 1: {
			cout << "ingrese los numeros" << endl;
			cin >> a;
			cin >> b;
			cout << "la suma es:" << a + b << endl << endl;
			break;
		}
		case 2: {
			cout << "ingrese un numero";
			cin >> a;
			if (a % 2 == 0)
				cout << "es par" << endl;
			else
				cout << "es impar" << endl << endl;
			break;
		}
		case 3: {
			cout << "ingrese un numero" << endl;
			cin >> a;
			cout << "los numeros del 1 al " << a << endl;
			for (int i = 1; i <= a; i++) {
				cout << i << " " << endl << endl;
			}
			break;
		}
		}
	} while (opcion != 0);
}
